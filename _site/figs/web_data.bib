@article{ WOS:000457669700010,
Author = {Li, Dian-Qing and Xiao, Te and Zhang, Li-Min and Cao, Zi-Jun},
Title = {{Stepwise covariance matrix decomposition for efficient simulation of
   multivariate large-scale three-dimensional random fields}},
