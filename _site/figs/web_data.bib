@article{ WOS:000320890700011,
Author = {Alves, Marcelo de Carvalho and de Carvalho, Luiz Gonsaga and Vianello,
   Rubens Leite and Sediyama, Gilberto C. and de Oliveira, Marcelo Silva
   and de Sa Junior, Arionaldo},
Title = {{Geostatistical improvements of evapotranspiration spatial information
